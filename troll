

#include <iostream>
#include <cstdlib>
#include <cstdio>

using namespace std;


void gotoxy(int x,int y)
{
    printf("%c[%d;%df",0x1B,y,x);   //0x1B : ANSI escape code
}

void msgroll(char *text,int n)
{
	for(int j=0;j<n;j++)
	{
		for(int i=0;text[i]!='\0';i++)
		{	
			system("sleep 0.1s");
			cout<<text[i];
			fflush(stdout);
		}
		system("clear");
	}
}
